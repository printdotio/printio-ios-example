<customization>
    
    <screen name="product_details">
        <button name="button_create" bcg_color="#2277D4" font_color="#ffffff"/>
        <label name="label_1" font_color="#000000"/>
        <label name="label_2" font_color="#000000"/>
        <label name="label_3" font_color="#000000"/>
        <label name="label_4" font_color="#000000"/>
        <label name="label_5" font_color="#000000"/>
    </screen>
    
    <screen name="dialog_two_buttons">
        <button name="button_right" bcg_color="#2277D4" font_color="#ffffff"/>
        <button name="button_left" bcg_color="#D1D1D1" font_color="#2277D4"/>
    </screen>
    
    <screen name="dialog_arrange_photos">
        <button name="button_right" bcg_color="#2277D4" image_name="btn_drag_drop" image_format="png"/>
        <button name="button_left" bcg_color="#D1D1D1" image_name="btn_arrange" image_format="png"/>
        <label name="label_right" font_color="#ffffff"/>
        <label name="label_left" font_color="#2277D4"/>
    </screen>
    
    <screen name="dialog_address_type">
        <button name="button_right" bcg_color="#2277D4" image_name="btn_home" image_format="png"/>
        <button name="button_left" bcg_color="#D1D1D1" image_name="btn_business" image_format="png"/>
        <label name="label_right" font_color="#ffffff"/>
        <label name="label_left" font_color="#2277D4"/>
    </screen>
    
    <screen name="photo_sources">
        <label name="label_title" font_color="#484848"/>
        <label name="label_down" bcg_color="#484848"/>
        <button name="button_next" bcg_color="#50A3FF" font_color="#ffffff"/>
    </screen>
    
    <screen name="shopping_cart">
        <button name="button_edit" bcg_color="#484848" font_color="#ffffff" />
        <button name="button_check_out" bcg_color="#50A3FF" font_color="#ffffff" />
    </screen>
    
    <screen name="select_address">
        <button name="button_edit" bcg_color="#484848" font_color="#ffffff" />
        <button name="button_add" bcg_color="#50A3FF" font_color="#ffffff" />
    </screen>
    
    <screen name="add_address">
        <button name="button_save" bcg_color="#50A3FF" font_color="#ffffff" />
    </screen>
    
    <screen name="product_preview">
        <label name="label_1" bcg_color="#484848" font_color="#ffffff" />
        <label name="label_2" bcg_color="#484848" font_color="#ffffff" />
        <label name="label_3" bcg_color="#484848" font_color="#ffffff" />
        <label name="label_4" bcg_color="#484848" font_color="#ffffff" />
    </screen>
    
    <screen name="image_editor">
        <button name="button_back" bcg_color="#d1d1d1" font_color="#000000" title="Cancel"/>
        <button name="button_save" bcg_color="#50A3FF" font_color="#ffffff" />
        <button name="button_1" font_color="#ccd0d5" image_name="mg_image_editor_info" image_format="png"/>
    </screen>
    
    <screen name="address_validation">
        <button name="button_accept" bcg_color="#50A3FF" font_color="#ffffff" />
        <button name="button_edit" bcg_color="#484848" font_color="#ffffff" />
        <button name="button_edit_down" bcg_color="#484848" font_color="#ffffff" />
    </screen>
    
    <screen name="shipment_review">
        <button name="button_enter" bcg_color="#50A3FF" font_color="#ffffff" />
    </screen>
    
    <screen name="order_confirmation">
        <button name="button_close" bcg_color="#50A3FF" font_color="#ffffff" />
    </screen>
    
    <screen name="customize_books">
        <button name="button_back" bcg_color="#484848" font_color="#ffffff" />
        <button name="button_buy" bcg_color="#50A3FF" font_color="#ffffff" />
    </screen>
    
    <screen name="credit_card">
        <button name="button_1" bcg_color="#50A3FF" font_color="#ffffff" />
        <button name="button_2" bcg_color="#484848" font_color="#ffffff" />
    </screen>
    
</customization>